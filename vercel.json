{
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          { "key": "X-Content-Type-Options", "value": "nosniff" },
          {
            "key": "Content-Security-Policy",
            "value": "font-src 'none'"
          },
          {
            "key": "Permissions-Policy",
            "value": "camera=(), microphone=(), geolocation=(), fullscreen=(self)"
          }
        ]
      }
    ]
  }
  